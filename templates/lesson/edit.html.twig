{% extends 'base.html.twig' %}

{% block title %}Редактировать {{ lesson.name }} / Редактировать {{ lesson.course.name }} / StudyOn{% endblock %}

{% block body %}
<h1>{{ lesson.name }}</h1>
<p>Курс: <a href="{{ path('course_show', {'id': lesson.course.id}) }}">{{ lesson.course.name }}</a></p>

{{ form_start(form) }}
    <div>
        {{ form_row(form.name, {'label': 'Name'}) }}
    </div>
    <div>
        {{ form_row(form.content, {'label': 'Content'}) }}
    </div>
    <div>
        {{ form_row(form.position, {'label': 'Ordering'}) }}
    </div>
    <button type="submit">Сохранить</button>
{{ form_end(form) }}

{{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
