<form method="post" action="{{ path('lesson_delete', {'id': lesson.id}) }}" onsubmit="return confirm('Вы действительно хотите удалить?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ lesson.id) }}">
    <button type="submit" class="btn btn-outline-danger">Удалить</button>
</form>
