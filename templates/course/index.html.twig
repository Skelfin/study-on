{% extends 'base.html.twig' %}

{% block title %}Курсы{% endblock %}

{% block body %}
<h1>Курсы</h1>

{% for course in courses %}
    <div style="margin-bottom: 20px;">
            <h2>
                <a href="{{ path('course_show', {'id': course.id}) }}">
                    {{ course.name }}
                </a>
            </h2>
        <p>{{ course.description }}</p>
    </div>
{% else %}
    <p>Нет курсов</p>
{% endfor %}

<hr>

<a href="{{ path('course_new') }}">Добавить новый курс</a>
{% endblock %}
