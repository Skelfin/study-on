{% extends 'base.html.twig' %}

{% block title %}{{ course.name }} / StudyOn{% endblock %}

{% block body %}
<h1>{{ course.name }}</h1>
<p>{{ course.description }}</p>


<h2>Уроки</h2>
<ol>
    {% for lesson in course.lessons %}
        <li>
            <a href="{{ path('lesson_show', {'id': lesson.id}) }}">{{ lesson.name }}</a>
        </li>
    {% else %}
        <p>Уроки не найдены</p>
    {% endfor %}
</ol>

<hr>

<a href="{{ path('course_index') }}">К списку курсов</a> |
<a href="{{ path('course_edit', {'id': course.id}) }}">Редактировать курс</a> |
<a href="{{ path('lesson_new', {'course_id': course.id}) }}">Добавить урок</a>

{{ include('course/_delete_form.html.twig') }}
{% endblock %}
